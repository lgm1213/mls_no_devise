<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    New Building or Property
    <ol class="breadcrumb">
      <li>
        <%= link_to "Home", root_path %></a>
      </li>
      <li>
        <strong><%= link_to "Portfolio", building_listings_path %></strong>
      </li>
      <li class="active">
        <strong><%= link_to "New Listing", new_building_listing_path %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animaed fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="box">
        <div class="ibox-title">
          <h5>Create A New Rental Listing</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <h2>New Listing Creation Form</h2>
          <%= form_for(@listing, url: (@listing.new_record? ? {action: 'create'} : {action: 'update'}), html: {id: 'form', class: 'wizard-big form-horizontal', multipart: true}, :authenticity_token => true) do |f| %>
           <% if listing.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(listing.errors.count, "error") %> prohibited this user from being saved:</h2>
              <ul>
              <% listing.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <h1>Rental Description</h1>
          <fieldset>
            <h2>Rental Listing Description</h2>
            <div class="form-group">
              <%= f.label :unit_no, "Unit Number", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <%= f.text_field :unit_no, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :unit_model, "Unit's Floorplan/Model", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <%= f.text_field :unit_model, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :beds, "Number of Bedrooms", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <%= f.text_field :beds, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :num_fbaths, "Number of Full Bathrooms", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <%= f.text_field :num_fbaths, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :num_hbaths, "Number of Half Baths", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <%= f.text_field :num_hbaths, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :sqft, "Square Footage", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <%= f.text_field :sqft, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :date_available, "Date Unit Is Avaialble", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <div class="input-group date" data-provide="datepicker">
                  <%= f.text_field :date_available, class: 'form-control' %>
                  <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <%#= f.label :photo, "Photos of Listing", class: 'control-label col-sm-4' %>
              <div class="col-sm-2">
                <%#= f.file_field :photo %>
              </div>              
            </div>
          </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



